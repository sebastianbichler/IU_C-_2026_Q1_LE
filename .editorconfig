# Top-level editorconfig file
root = true

[*]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[*.cs]
# --- C# Coding Conventions ---
dotnet_diagnostic.IDE1006.severity = suggestion

# Namespaces: Nutze die moderne, kompakte Syntax von .NET 8
csharp_style_namespace_declarations = file_scoped:suggestion

# New-Operator: Nutze 'Target-typed new' (z.B. List<int> list = new();)
#csharp_style_implicit_object_creation_when_type_is_explicit = true:suggestion

# --- Naming Conventions ---

# Private Felder müssen mit einem Unterstrich beginnen (z.B. _logger)
dotnet_naming_rule.private_members_with_underscore.symbols = private_fields
dotnet_naming_rule.private_members_with_underscore.style = prefix_underscore
dotnet_naming_rule.private_members_with_underscore.severity = suggestion

dotnet_naming_symbols.private_fields.applicable_kinds = field
dotnet_naming_symbols.private_fields.applicable_accessibilities = private

dotnet_naming_style.prefix_underscore.capitalization = camel_case
dotnet_naming_style.prefix_underscore.required_prefix = _

# PascalCase für Methoden, Klassen und Properties
dotnet_naming_rule.methods_and_properties_must_be_pascal_case.symbols = method_and_property_symbols
dotnet_naming_rule.methods_and_properties_must_be_pascal_case.style = pascal_case_style
dotnet_naming_rule.methods_and_properties_must_be_pascal_case.severity = warning

dotnet_naming_symbols.method_and_property_symbols.applicable_kinds = method,property,class,struct,interface
dotnet_naming_style.pascal_case_style.capitalization = pascal_case

# --- Nullable Reference Types ---
# Erzwinge Prüfung auf Null-Werte
dotnet_diagnostic.CS8600.severity = warning
dotnet_diagnostic.CS8602.severity = warning

# --- Language Rules ---

# 'var' nur verwenden, wenn der Typ offensichtlich ist
csharp_style_var_for_built_in_types = false:suggestion
csharp_style_var_when_type_is_apparent = true:suggestion

# Bevorzuge Expression-bodied members für kleine Methoden (KISS)
csharp_style_expression_bodied_methods = when_on_single_line:suggestion
csharp_style_expression_bodied_constructors = false:suggestion

# --- Cleanup ---
# Entferne ungenutzte Usings automatisch beim Formatieren
dotnet_style_qualification_for_field = false:suggestion
dotnet_style_qualification_for_property = false:suggestion